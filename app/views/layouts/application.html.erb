<!DOCTYPE html>
<html>
  <head>
    <title>RailsExamIg</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>

    <% if logged_in? %>
      <%= link_to '一覧', pictures_path %>
      <%= link_to "新規投稿", new_picture_path %>
      <%= link_to "プロフィール", user_path(current_user.id) %>
      <%= link_to "ログアウト", session_path(current_user.id), method: :delete %>
    <% else %>
      <%= link_to "ユーザー登録", new_user_path %>
      <%= link_to "ログイン", new_session_path %>
    <% end %>

    <%= yield %>
  </body>
</html>
